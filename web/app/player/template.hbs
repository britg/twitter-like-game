<div id="player">

  <div class="navigation">
    {{game-nav}}
  </div>

  <div class="location-banner">
    <div class="location-name">
      <h1>{{attr.player.location.name}}</h1>
    </div>
  </div>

  <div class="game-interface">

    <div class="player-details">
      <div class="inner">
        {{player-card player=attr.player}}
        {{user-form action="createUser" user=attr.player.user}}
      </div>
    </div>

    {{event-timeline events=attr.player.events action="chooseAction"}}

    <div class="misc-panels">
    </div>

  </div>
</div>
